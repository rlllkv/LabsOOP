@{
    ViewData["Title"] = "Home Page";
}

<style>
    .home{
        width:100%;
    }
    h2.welcome{
        font-size:50px;
        margin-bottom: 100px;
    }
    .home_title{
        font-weight: 700;
        margin-bottom: 50px;
    }
    .home_container{
        display:flex;
        flex-direction:column;
        align-items:center;
    }
    .home_list{
        width:300px;
        padding: 20px;

        display:flex;
        flex-direction:column;
        gap:20px;
    }

    .list_link{
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 10px;
        background-color: #0c0c0c;
        color:#f0f0f0;
        transition: 0.2s all;
    }
    .list_link:hover{
        background-color: rgba(0, 0, 0, 0.7);
        color: #fff;
    }
</style>

<div class="text-center home">
    <h2 class="display-4 welcome">Welcome</h2>
    <div class="home_container">
        <h1 class="home_title">Base</h1>
        <div class="home_list">
            <a href="Students" class="list_link">Students</a>
            <a href="Groups" class="list_link">Groups</a>
            <a href="StudentToGroups" class="list_link">Students and their Groups</a>
            <a href="ID_card" class="list_link">Student`s number of ID card</a>
        </div>
        
    </div>
    
</div>
