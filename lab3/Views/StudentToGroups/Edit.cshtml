@model BazaGRUD.Models.StudentToGroup

@{
    ViewData["Title"] = "Edit";
}

<style>
    label.control-label, select, input.btn.btn-primary {
        margin-bottom: 20px;
    }

    input.btn.btn-primary {
        padding: 15px;
        border: none;
        border-radius: 10px;
        background-color: #0c0c0c;
        color: #fff;
        margin-bottom: 50px;
    }

    input.btn.btn-primary:hover {
        background-color: rgba(0, 0, 0, 0.7);
        color: #fff
    }

    div a#back {
        text-decoration: none;
        padding: 15px 30px;
        border: none;
        border-radius: 10px;
        background-color: #0c0c0c;
        color: #fff;
    }

    div a#back:hover {
        background-color: rgba(0, 0, 0, 0.7);
        color: #fff
    }
</style>

<h1>Edit</h1>

<h4>Student To Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupID" class="control-label"></label>
                <select asp-for="GroupID" class="form-control" asp-items="ViewBag.GroupID"></select>
                <span asp-validation-for="GroupID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" id="back">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
